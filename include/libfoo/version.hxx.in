#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define SRC_LIBFOO_VERSION       $libfoo.version.project_number$ULL
#define SRC_LIBFOO_VERSION_STR   "$libfoo.version.project$"
#define SRC_LIBFOO_VERSION_ID    "$libfoo.version.project_id$"
#define SRC_LIBFOO_VERSION_FULL  "$libfoo.version$"

#define SRC_LIBFOO_VERSION_MAJOR $libfoo.version.major$
#define SRC_LIBFOO_VERSION_MINOR $libfoo.version.minor$
#define SRC_LIBFOO_VERSION_PATCH $libfoo.version.patch$

#define SRC_LIBFOO_PRE_RELEASE   $libfoo.version.pre_release$

#define SRC_LIBFOO_SNAPSHOT_SN   $libfoo.version.snapshot_sn$ULL
#define SRC_LIBFOO_SNAPSHOT_ID   "$libfoo.version.snapshot_id$"
